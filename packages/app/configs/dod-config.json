{
  "requiredFiles": ["README.md", "azure.yaml", "LICENSE"],
  "requiredFolders": ["infra", ".github"],
  "requiredWorkflowFiles": [
    {
      "pattern": ".github/workflows/azure-dev.yml",
      "message": "Missing required GitHub workflow: azure-dev.yml"
    }
  ],
  "readmeRequirements": {
    "requiredHeadings": ["Prerequisites", "Getting Started"],
    "architectureDiagram": {
      "heading": "Architecture",
      "requiresImage": true
    }
  },
  "bicepChecks": {
    "requiredResources": ["Microsoft.Resources/resourceGroups", "Microsoft.KeyVault/vaults"],
    "securityBestPractices": {
      "preferManagedIdentity": true,
      "detectInsecureAuth": true,
      "checkAnonymousAccess": true
    }
  },
  "azureYamlRules": {
    "mustDefineServices": true
  }
}
