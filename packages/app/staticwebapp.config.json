{
  "$schema": "https://json.schemastore.org/staticwebapp.config.json",
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "*.{css,js,png,jpg,svg,gif,ico}",
      "/assets/*",
      "/results/*",
      "/configs/*",
      "/api/*",
      "*.json",
      "*.md",
      "*.txt"
    ]
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    }
  ],
  "globalHeaders": {
    "Cache-Control": "no-cache, no-store, must-revalidate"
  },
  "mimeTypes": {
    ".json": "application/json"
  }
}