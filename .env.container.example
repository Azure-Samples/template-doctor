# Template Doctor Container Example (.env.container.example)
# Full feature configuration. COPY and edit secrets before use.

PORT=4000
SERVE_FRONTEND=true

# OAuth App (GitHub Settings > Developer Settings > OAuth Apps)
GITHUB_CLIENT_ID=replace_with_client_id
GITHUB_CLIENT_SECRET=replace_with_client_secret

# Primary PAT for workflow dispatch, labels, issues, prs (fine-grained or classic with repo scopes)
GH_WORKFLOW_TOKEN=replace_with_pat

# Optional read-only token for repository content fetches during analysis
GITHUB_TOKEN_ANALYZER=replace_with_read_only_pat

# Target repository receiving workflow dispatch events (analysis jobs)
DISPATCH_TARGET_REPO=Org/results-repo

# Default rule set (dod | partner | custom)
DEFAULT_RULE_SET=partner

# Archive feature
ARCHIVE_ENABLED=true
ARCHIVE_COLLECTION=gallery
ARCHIVE_REPO_SLUG=Template-Doctor/centralized-collections-archive

# Behavior flags
REQUIRE_AUTH_FOR_RESULTS=true
AUTO_SAVE_RESULTS=true

# Optional comma-separated deprecated model list surfaced in metadata
DEPRECATED_MODELS=gpt-3.5-turbo,model-old-x

# Validation workflow specifics (if using validation APIs)
GITHUB_WORKFLOW_FILE=validation-template.yml
GITHUB_REPO_BRANCH=main

# Optional explicit owner/repo if not using GITHUB_REPOSITORY
# GITHUB_REPO_OWNER=YourOrg
# GITHUB_REPO_NAME=your-template-repo

# Debug flags
# DEBUG_ANALYZE=1
