{
    "name": "template-doctor",
    "version": "0.0.1",
    "description": "An Azure template analysis and healing app",
    "main": "bin/cli.js",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "bin": {
        "template-doctor": "dist/cli.js"
    },
    "scripts": {
        "setup:uami": "bash ./scripts/setup.sh",
        "dev:api": "npm -w packages/api start",
        "dev:frontend": "npm -w packages/app start",
        "test": "npm run test:frontend",
        "test:frontend": "npm run -w packages/app test",
        "test:api": "npm run -w packages/api test",
        "test:all": "npm run test:api && npm run test:frontend",
        "test:ui": "npm run -w packages/app test:ui",
        "test:debug": "npm run -w packages/app test:debug",
        "smoke:api": "node scripts/smoke-api.mjs"
    },
    "keywords": [
        "azd",
        "azure",
        "templates"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@playwright/test": "^1.55.0",
        "@types/node": "^24.0.14"
    },
    "dependencies": {
        "@actions/core": "^1.11.1",
        "dotenv": "^17.2.0",
        "open": "^10.2.0"
    }
}
